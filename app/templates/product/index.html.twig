{# templates/product.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Продукты{% endblock %}

{% block body %}
    <h1>Список продуктов</h1>
    <table>
        <thead>
        <tr><td><a href="{{ path('home') }}">Назад</a></td></tr>
        <tr>
            <th>Номер</th>
            <th>Имя</th>
            <th>Цена</th>
            <th>Вес</th>
            <th>Номер чека</th>
            <th>-</th>
            <th>-</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.quantity }}</td>
                <td>{{ product.receipt.id }}</td>
                <td><a href="{{ path('edit_product', {'id': product.id}) }}">Редактировать</a></td>
                <td><a href="{{ path('delete_product', {'id': product.id}) }}" onclick="return confirm('Вы уверены, что хотите удалить этот продукт?')">Удалить</a></td>
            </tr>
        {% endfor %}
        <tr><td><a href="{{ path('new_product') }}">Добавить</a></td></tr>
        </tbody>
    </table>

{% endblock %}
