{# templates/users.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Пользователи{% endblock %}

{% block body %}
    <h1>Пользователи</h1>
    <table>
        <thead>
        <tr><td><a href="{{ path('home') }}">Главная</a></td></tr>
        <tr>
            <th>Логин</th>
            <th>Права</th>
            <th>-</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>
                    {% for role in user.roles %}
                        {{ role }}
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
        <td><a href="{{ path('give_admin') }}">Дать себе права админа</a></td>
        </tbody>
    </table>
{% endblock %}
