{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    <h1>Вход</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <table>
            <tr>
                <th><label for="username">Email:</label></th>
                <th><input type="text" id="username" name="_username" value="{{ last_username }}"></th>
            </tr>
            <tr>
                <th><label for="password">Password:</label></th>
                <th><input type="password" id="password" name="_password"></th>
            </tr>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"> #}
            <tr><th></th><th><button type="submit">Войти</button></th></tr>
            <tr><th><a href="{{ path('app_register') }}">Зарегистрироваться</a></th></tr>
        </table>
    </form>
{% endblock %}